{% extend 'template.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block content %}
	<div class="container">
		<h2>Veuillez vous connecter</h2>
		{% if error %}
			<div class="card-panel red lighten-4">
				<span class="red-text reddarken-4"><strong>Nom d'utilisateur </strong> ou <strong>Mot de Pass</strong> incorecte!</span>
			</div>
		{% endif %}
		<div class="row">
			<form class="col s12" action="{{ path('login_check') }}" methode="post">
				<div class="input-field col s12">
          			<i class="material-icons prefix">account_circle</i>
          			<input id="icon_prefix" type="text" class="validate">
          			<label for="icon_prefix">Login</label>
        		</div>
        		<div class="input-field col s12">
          			<i class="material-icons prefix">lock</i>
          			<input id="icon_prefix" type="password" class="validate">
          			<label for="icon_prefix">Password</label>
        		</div>
        		<div>
        			<button type="submit" class="waves-effect waves-light btn">Connexion</button>
        		</div>
			</form>
		</div>
	</div>
{% endblock %}