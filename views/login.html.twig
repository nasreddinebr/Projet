{% extends 'template.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block content %}
	<div class="container">
		
		{% if error %}
			<div class="card-panel red lighten-4" id="message">
				<span class="red-text darken-4"><strong>Nom d'utilisateur </strong> ou <strong>Mot de Pass</strong> incorecte!</span>
			</div>
		{% endif %}
		<div class="row">
		<div class="centers">
			<h2>Veuillez vous identifier</h2>
			<form class="col s12" role="form" action="{{ path('login_check') }}" method="post">
				<div class="input-field col s12">
          			<i class="material-icons prefix">account_circle</i>
          			<input id="icon_prefix" type="text" class="validate" name="_username" value="{{ last_username }}" required autofocus>
          			<label for="icon_prefix">Login</label>
        		</div>
        		<div class="input-field col s12">
          			<i class="material-icons prefix">lock</i>
          			<input id="icon_prefix" type="password" name="_password" class="validate" required>
          			<label for="icon_prefix">Password</label>
        		</div>
            	<center>
            		<div>
        				<button type="submit" class="waves-effect waves-light btn">Connexion</button>
        			</div>
        		</center>
        		
			</form>
		</div>
		</div>
	</div>
{% endblock %}