{# Viewing comments #}
<div class="row" id="comment{{ comment.id }}">
    <div class="col s12">
        <div class="card-panel teal lighten-5">
            <h6 class="grey-text">Par: {{ comment.author.username }} Le: {{ comment.dateComment|date("d/m/Y H:i:s") }}</h6>
            <p>{{ comment.content }}</p>
            <div class="right-align">
            	<button class="waves-effect waves-teal btn-flat reply" data-id="{{ comment.id }}">RÃ©pondre</button>
            </div>
            
        </div>
	</div>	
</div>

{# Retrieving replies #}
<div style="margin-left: 50px;">
	{% if comment.children is defined %}
	    {% for comment in comment.children %}
		    {% include "comment_post.html.twig"%}
	    {% endfor %}
    {% endif %}
</div>

