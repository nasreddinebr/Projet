{% extends "template.html.twig" %}
{% block title %}{{ post.title }}{% endblock %}

{% block content %}
	<div id="index-banner" class="parallax-container">
        <div class="parallax"><img src="{{ asset('/img/background3.jpg') }}" alt="Unsplashed background img 1"></div>
	</div>

	<div class="container">
		<div class="section">
			<h3>
            	<p>- {{ post.title }} <span class="date_size">{{ post.date }}</span></p>
            </h3>
            <p>{{ post.content }}</p>
            
            <h5>Commentaires:</h5>
           
            {# Recover all the comments of the article #}
            {% for comment in comments %}
            	    <div>
            	    	<h4>
            	    		<strong>{{ dump(comment) }}</strong>
            	    		<span class="date_size">{{ comment.dateComment }}</span>
            	    	</h4>
            	    	<p>{{ comment.content }}</p>
            	    </div>
            {% else %}
            	<p>Aucun commentaire lier Ã  ce billet.</p>
            {% endfor %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            	Soon!
            {% else %}
            	<a href="{{ path('signin') }}">Se Connecter</a> pour ajouter un commentere.
            {% endif %}
		</div>
	</div>        
{% endblock %}