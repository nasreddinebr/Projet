{% extends "template.html.twig" %}
{% block title %}{{ post.title }}{% endblock %}

{% block content %}
	<div id="index-banner" class="parallax-container">
        <div class="parallax"><img src="{{ asset('/img/background3.jpg') }}" alt="Unsplashed background img 1"></div>
	</div>

	<div class="container">
		<div class="section">
			<h3>
            	<p>- {{ post.title }} <span class="date_size">{{ post.date|date("d/m/Y h:i:s") }}</span></p>
            </h3>
            <p>{{ post.content }}</p>
            
            <h5>Commentaires:</h5>
           
            {# Recover all the comments of the article #}
            {% for comment in comments %}
            	    <div>
            	    	<h5>
            	    		<strong>{{ comment.author.username }}</strong>
            	    		<span class="date_size">{{ comment.dateComment|date("d/m/Y h:i:s") }}</span>
            	    	</h5>
            	    	<p>{{ comment.content }}</p>
            	    </div>
            {% else %}
            	<p>Aucun commentaire lier Ã  ce billet.</p>
            {% endfor %}
            {#% if is_granted('IS_AUTHENTICATED_FULLY') %#}
            {% if commentForm %}
            	{{ form_start(commentForm) }}
                	<div class="input-field col s12">
                		{{ form_errors(commentForm.content) }}
                		{{ form_widget(commentForm.content, { 'attr': { 
                		    'rows': '4',
                		    'class': 'materialize-textarea',
                		    'id': 'comment1'
                		}}) }}
                		<label for="textarea1">Ajouter votre commentaire</label>
                	</div>
                	<div class="input-field"><input type="submit" class="waves-effect waves-light btn"></div>
                {{ form_end(commentForm) }}
                {% for flashMessage in app.session.flashbag.get('success') %}
                	<div class="card-panel teal lighten-5">
						<span class="teal-text darken-4"><strong>{{ flashMessage }}</strong></span>
					</div>
				{% endfor %}
            {% else %}
            	<a href="{{ path('signin') }}">Se Connecter</a> pour ajouter un commentere.
            {% endif %}
		</div>
	</div>        
{% endblock %}