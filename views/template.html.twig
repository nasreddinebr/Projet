    	<link href="{{ asset('/css/blogStyle.css') }}" type="text/css" rel="stylesheet" media="screen,projection"/>
    	<title>Blog Ecrivain - {% block title %}{% endblock %}</title>
    </head>
    
    <body>
        <header>
        	<ul id="dropdown1" class="dropdown-content">
  				<li><a href="{{ path('logout') }}">Déconnexion</a></li>
			</ul>
        	<ul id="dropdown2" class="dropdown-content">
  				<li><a href="{{ path('signin') }}">Se connecter</a></li>
  				<li class="divider"></li>
  				<li><a href="{{ path('user_add') }}">Iscription</a></li>
			</ul>
			<ul id="dropdown3" class="dropdown-content">
  				<li><a href="{{ path('logout') }}">Déconnexion</a></li>
			</ul>
        	<ul id="dropdown4" class="dropdown-content">
  				<li><a href="{{ path('signin') }}">Se connecter</a></li>
  				<li class="divider"></li>
  				<li><a href="{{ path('user_add') }}">Iscription</a></li>
			</ul>
				<nav class="teal lighten-2" role="navigation">
                	<div class="nav-wrapper container">
                		<a id="logo-container" href="{{ path('home') }}" class="brand-logo">Jean Forteroche</a>
                		<ul class="right hide-on-med-and-down">
                			{% if app.user and (is_granted('ROLE_ADMIN') or is_granted('ROLE_AUTHOR')) %}
                				<li class="{% if adminMenu is defined %}active{% endif %}">
                					<a href="{{ path('admin') }}"><i class="material-icons">settings</i></a>
                				</li>
                			{% elseif app.user and is_granted('ROLE_MODERATOR') %}
                				<li class="{% if adminMenu is defined %}active{% endif %}">
                					<a href="{{ path('moderator') }}"><i class="material-icons">settings</i></a>
                				</li>
                			{% endif %}
                			<li><a href="{{ path('home') }}"><strong> Acceuil </strong></a></li>
                			<li><a href="{{ path('blog') }}"><strong> Blog </strong></a></li>
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                				<li><a class="dropdown-button" href="#!" data-activates="dropdown1"><strong> Bien-venu {{ app.user.username }} </strong><i class="material-icons right">arrow_drop_down</i></a></li>
                		    {% else %}
                				<li><a class="dropdown-button" href="#!" data-activates="dropdown2"><strong> Connectez-vous </strong><i class="material-icons right">arrow_drop_down</i></a></li>
						    {% endif %}
                  		</ul>
            
                  		<ul id="nav-mobile" class="side-nav">
                    		<li><a href="{{ path('home') }}"><strong> Acceuil </strong></a></li>
                			<li><a href="{{ path('blog') }}"><strong> Blog </strong></a></li>
                			{% if is_granted('IS_AUTHENTICATED_FULLY') %}
                				<li><a class="dropdown-button" href="#!" data-activates="dropdown3"><strong> Bien-venu {{ app.user.username }} </strong><i class="material-icons right">arrow_drop_down</i></a></li>
                		    {% else %}
                				<li><a class="dropdown-button" href="#!" data-activates="dropdown4"><strong> Connectez-vous </strong><i class="material-icons right">arrow_drop_down</i></a></li>
						    {% endif %}
                  		</ul>
                  		<a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
                	</div>
          		</nav>
        </header>
        
        <div id="content">{% block content %}{% endblock %}</div>
        
        <footer class="page-footer teal">
    		<div class="container">
      			<div class="row">
        			<div class="col l6 s12">
          				<h5 class="white-text"><u>Biographi de l'auteur</u></h5>
